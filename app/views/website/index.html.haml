#intro
  #intro__greeting
    .row
      .medium-12.columns
        %h1 #{@greeting.capitalize}!
        %h2 I'm Pierre-Yves Poujade,
        %h3 a Ruby on Rails developer
        %h3 living in Montréal.

  #intro__links
    .row
      .medium-12.columns
        %a See my Github
        %a Call me
        %a Write me
        %a Linked in

#contact
  #callme
    .row
      .medium-12.columns
        %h2 Call me
    .row
      .medium-6.columns
        %form#callme__form{method: 'post', action: '#'}
          .row
            .medium-12.columns
              %label
                Your phone number
                %input#callme__phoneNum{type: 'tel', placeholder: '(514) 555-1234', required: true, pattern: "[[0-9()-][\s]"}

          .row
            .medium-12.columns
              %a.button.expand.radius{data: { disable_with: "#{loading_animation} Dialling..." }}
                Call now

  #writeme
    .row
      .medium-12.columns
        %h2 Write me
    .row
      .medium-12.columns
        =render '/shared/show_flashes'
    .row
      .medium-6.columns
        %form#writeme__form{method: 'post', action: writeme_path, accept: {charset: 'UTF-8'}}
          .row
            .medium-12.columns
              %label
                Your name
                %input#writeme__senderName{type: 'text', name: 'writeme[sender_name]'}

          .row
            .medium-12.columns
              %label
                Your email
                %input#writeme__senderAddr{type: 'email', name: 'writeme[sender_addr]'}

          .row
            .medium-12.columns
              %label
                Your message
              %textarea#writeme__senderMessage{type: 'text', name: 'writeme[sender_message]'}

          =hidden_field_tag :utf8, '✓'
          =hidden_field_tag :authenticity_token, form_authenticity_token

          .row
            .medium-12.columns
              %button.button.expand.radius{type: 'submit', data: { disable_with: "#{loading_animation} Sending..." }}
                Send
