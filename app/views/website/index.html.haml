    #contact
      #writeme
        .row
          .medium-12.columns
            %h2 Contact me
        .row
          .medium-12.columns
            =render '/shared/show_flashes'
        .row
          .medium-6.columns
            %form#writeme__form{method: 'post', action: writeme_path, accept: {charset: 'UTF-8'}}
              .row
                .medium-12.columns
                  %label
                    Your name
                    %input#writeme__senderName{type: 'text', name: 'writeme[sender_name]'}

              .row
                .medium-12.columns
                  %label
                    Your email
                    %input#writeme__senderAddr{type: 'email', name: 'writeme[sender_addr]'}

              .row
                .medium-12.columns
                  %label
                    Your message
                  %textarea#writeme__senderMessage{type: 'text', name: 'writeme[sender_message]'}

              =hidden_field_tag :utf8, 'âœ“'
              =hidden_field_tag :authenticity_token, form_authenticity_token

              .row
                .medium-12.columns
                  %button.button.expand.radius{type: 'submit', data: { disable_with: "#{loading_animation} Sending..." }}
                    Send
